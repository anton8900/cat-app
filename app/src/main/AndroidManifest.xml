<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.simple.cat.app"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@drawable/ic_cat"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_cat"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:node="replace">

        <activity android:name=".ui.activities.SplashActivity" android:screenOrientation="locked">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.activities.ContainerActivity" android:screenOrientation="locked" />

    </application>


</manifest>
