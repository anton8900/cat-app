<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/audiencetools_medium</item>
    </style>

    <style name="BlackDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="WhiteDialog" parent="Theme.AppCompat.Dialog">
        <item name="colorPrimary">@color/background_color</item>
        <item name="colorPrimaryDark">@color/background_color</item>
        <item name="colorAccent">@color/background_color</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="EditTextStyleSettings">
        <item name="android:fontFamily">@font/audiencetools_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/black</item>
        <item name="colorControlHighlight">@color/black</item>
    </style>


    <style name="BurgerMenuButton">
        <item name="android:background">@color/background_color</item>
    </style>

    <style name="TextViewInActionBar">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:fontFamily">@font/audiencetools_medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="TextViewSubheader">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#999999</item>
        <item name="android:paddingTop">18dp</item>
        <item name="android:paddingBottom">18dp</item>
        <item name="android:paddingRight">18dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewScanBadge">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/audiencetools_bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextViewForProgressBar">
        <item name="android:fontFamily">@font/audiencetools_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginBottom">40dp</item>
    </style>

    <style name="TextviewBarcodeAlert">
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MainMenuHeader">
        <item name="android:background">@color/background_color</item>
        <item name="android:padding">20dp</item>
    </style>

    <style name="MenuEventName">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextViewTicket">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">35sp</item>
    </style>

    <style name="TextViewTicketInValidMessage">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">30sp</item>
        <item name="android:paddingBottom">50dp</item>
    </style>


</resources>
